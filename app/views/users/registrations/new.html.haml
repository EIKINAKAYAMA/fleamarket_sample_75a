%h2 ユーザー情報登録
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, placeholder: 'フリマさん'
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可'
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} 文字以上入力してください)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, placeholder: '山田'
    %br/
    = f.label :first_name
    %br/
    = f.text_field :first_name, placeholder: '太郎'
  .field
    = f.label :last_name_kana
    %br/
    = f.text_field :last_name_kana, placeholder: 'ヤマダ'
    %br/
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana, placeholder: 'タロウ'
  %div{:class0 => "field"}
    = f.label :birthday
    = raw sprintf(f.date_select(:birthday, include_blank: true, use_month_numbers: true,start_year: 1920,end_year: (Time.now.year - 10),date_separator: '%s'),'年 ', '月 ')
  .actions
    = f.submit "Next"
= render "devise/shared/links"
